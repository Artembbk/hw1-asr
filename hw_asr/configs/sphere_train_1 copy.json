{
  "name": "testing saving",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "DeepSpeech2pacModel",
    "args": {
      "n_feats": 128,
      "hidden": 256,
      "conv_num": 1,
      "conv_type": "2d",
      "kernel_sizes": [[41, 11]],
      "strides": [[2, 2]],
      "channels": [32],
      "paddings": [[10, 5]],
      "rnn_type": "gru",
      "rnn_layers": 2,
      "rnn_bidirectional": true,
      "batch_norm_conv": true
    }
  },
  "data": {
    "train": {
      "batch_sampler": {
        "type": "GroupLengthBatchSampler",
        "args": {
          "batch_size": 20
        }
      },
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "data_dir": "/home/jupyter/mnt/datasets/LibriSpeech/LibriSpeech/",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 100
          }
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "data_dir": "/home/jupyter/mnt/datasets/LibriSpeech/LibriSpeech/",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 100
          }
        }
      ]
    },
    "test": {
      "batch_size": 20,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "data_dir": "/home/jupyter/mnt/datasets/LibriSpeech/LibriSpeech/",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 100
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": {
    "train": [
      {
        "type": "ArgmaxWERMetric",
        "args": {
          "name": "WER (argmax)"
        }
      },
      {
        "type": "ArgmaxCERMetric",
        "args": {
          "name": "CER (argmax)"
        }
      }
    ],
    "val": [
      {
        "type": "ArgmaxWERMetric",
        "args": {
          "name": "WER (argmax)"
        }
      },
      {
        "type": "ArgmaxCERMetric",
        "args": {
          "name": "CER (argmax)"
        }
      }
    ]
  },
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 1400,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 3e-4,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
